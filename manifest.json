{
  "manifest_version": 2,
  "name": "OMTA",
  "version": "0.1",
  "description": "Online manual test assistance",
  "icons": {
    "96": "assets/images/icon96.png"
  },
  "minimum_chrome_version": "35.0",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "assets/javascripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Помощник тестировщика",
    "default_popup": "popup.html"
  },
  "permissions": [
//    'experimental' requires the 'experimental-extension-apis' command line switch to be enabled.
//    "experimental",
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications"
  ]
}
