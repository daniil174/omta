{
  "manifest_version": 2,
  "name": "OMTA",
  "version": "0.1",
  "description": "Online manual test assistance",
  "icons": {
    "96": "assets/images/icon96.png"
  },
  "minimum_chrome_version": "35.0",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "assets/javascripts/background.js",
      "assets/javascripts/check.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Помощник тестировщика",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["assets/javascripts/content.js"],
      "css": ["assets/styles/content.css"]
    }
  ],
  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*",
    "*://*/*",
    "notifications"
  ]
}
